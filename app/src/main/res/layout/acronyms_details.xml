<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:app="http://schemas.android.com/apk/res-auto"
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content"
       app:cardCornerRadius="4dp"
       app:elevation="4dp"
       android:layout_margin="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="match_parent">

    <TextView
            android:text="TextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fullname_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/freq_text_view"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/fullname_text_view"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Frequency:127"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/since_text_view"
              app:layout_constraintBaseline_toBaselineOf="@id/freq_text_view"
              app:layout_constraintHorizontal_chainStyle="spread"
              app:layout_constraintEnd_toEndOf="parent"
              android:text="Since:1975"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
